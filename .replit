modules = ["python-3.12"]
run = "python3 manage.py runserver 0.0.0.0:3000"

[nix]
channel = "stable-25_05"
packages = ["cacert", "cargo", "freetype", "lcms2", "libiconv", "libimagequant", "libjpeg", "libmysqlclient", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pgadmin4", "rustc", "tcl", "tk", "zlib", "lsof"]

[deployment]
run = ["sh", "-c", "python3 manage.py runserver 0.0.0.0:3000"]

[workflows]
runButton = "Django Server"

[[workflows.workflow]]
name = "Django Server"
author = 40043096
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src && python manage.py migrate && python manage.py runserver 0.0.0.0:5000"

[[ports]]
localPort = 5000
externalPort = 80
